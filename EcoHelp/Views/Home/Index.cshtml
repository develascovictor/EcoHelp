@{
    Layout = null;
}
<!DOCTYPE html>

<html ng-app="EcoApp">
    <head>
        <!--Application Metadata-->
        <meta charset="utf-8" />
        <meta name="description" content="" />
        <meta name="author" content="Victor De Velasco" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />

        <!--Project Information-->
        <title>
            Eco Help
        </title>

        <!-- Styling Libraries -->
        <link href="@Url.Content("~/Resources/libraries/material-icons/material-icons.css")" rel="stylesheet" />
        <link href="@Url.Content("~/Resources/libraries/materialize/css/materialize.css")" rel="stylesheet" />
        <link href="@Url.Content("~/Resources/css/layout.css")" rel="stylesheet" />
        <link href="@Url.Content("~/Resources/css/navbar.css")" rel="stylesheet" />
        <link href="@Url.Content("~/Resources/css/toast.css")" rel="stylesheet" />
        <link href="@Url.Content("~/Resources/css/sidenav.css")" rel="stylesheet" />
        <link href="@Url.Content("~/Resources/css/spinner.css")" rel="stylesheet" />

        <script>
            var path = "@ViewBag.Url";
        </script>

        <!--Angular Core-->
        <script src="@Url.Content("~/Resources/libraries/jquery/jquery-3.1.1.js")"></script>
        <script src="@Url.Content("~/Resources/libraries/linqjs/jquery.linq.js")"></script>
        <script src="@Url.Content("~/Resources/libraries/linqjs/linq.js")"></script>
        <script src="@Url.Content("~/Resources/libraries/materialize/js/materialize.js")"></script>
        <script src="@Url.Content("~/Resources/libraries/angular/angular.js")"></script>
        <script src="@Url.Content("~/Resources/libraries/angular/angular-animate.js")"></script>
        <script src="@Url.Content("~/Resources/libraries/angular/angular-sanitize.js")"></script>
        <script src="@Url.Content("~/Resources/libraries/angular/angular-route.js")"></script>
        <script src="@Url.Content("~/App/app.module.js")"></script>
        <script src="@Url.Content("~/App/app.config.js")"></script>
        <script src="@Url.Content("~/App/Components/Directives/fallbackScr.js")"></script>
        <script src="@Url.Content("~/App/Components/Home/Home.Controller.js")"></script>
        <script src="@Url.Content("~/App/Components/Home/Home.Service.js")"></script>
    </head>

    <body ng-controller="Home" ng-cloak>
        <nav class="navbar">
            <img class="logo hide-on-med-and-down" src="~/Resources/images/gaslogo.jpg" />

            <a href="#" data-activates="slide-out" class="button-collapse">
                <i class="material-icons">
                    menu
                </i>
            </a>

            <div class="title hide-on-med-and-down">
                Eco Help - {{CurrentUser.Contact.FullName}}
            </div>

            <div class="bg-border-radius"></div>
        </nav>

        <ul id="slide-out" class="side-nav collapsible" data-collapsible="accordion">
            <li class="head-item">
                <span class="title">
                    Eco Help
                </span>

                <div class="name">{{CurrentUser.Contact.FullName}}</div>
            </li>

            <li>
                <h5>Categor&iacute;as</h5>
                <div class="divider"></div>
            </li>

            <li class="category-item" ng-repeat="category in Categories">
                <div class="collapsible-header">
                    <b>{{category.Name}}</b>
                </div>

                <div class="collapsible-body">
                    <ul>
                        <li ng-repeat="issue in category.Issues">
                            <div class="waves-effect" ng-click="LoadCauses(issue)">
                                <b>
                                    {{issue.Name}}

                                    <span class="priority-{{issue.Priority.Id}}">
                                        &nbsp;&nbsp;&nbsp;({{issue.Priority.Name}})
                                    </span>
                                </b>
                            </div>
                        </li>
                    </ul>
                </div>
            </li>
        </ul>

        <div class="row marginless">
            <div class="hide-on-med-and-down view col s3">
                <div class="left-nav">
                    <ul class="collapsible" data-collapsible="accordion">
                        <li>
                            <h5>Categor&iacute;as</h5>
                            <div class="divider"></div>
                        </li>

                        <li class="category-item" ng-repeat="category in Categories">
                            <div class="collapsible-header">
                                <b>{{category.Name}}</b>
                            </div>

                            <div class="collapsible-body">
                                <ul>
                                    <li ng-repeat="issue in category.Issues">
                                        <div class="waves-effect" ng-click="LoadCauses(issue)">
                                            <b>
                                                {{issue.Name}}

                                                <span class="priority-{{issue.Priority.Id}}">
                                                    &nbsp;&nbsp;&nbsp;({{issue.Priority.Name}})
                                                </span>
                                            </b>
                                        </div>
                                    </li>
                                </ul>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>

            <div class="main-screen view white z-depth-1 col s12 m12 l9" style="padding-top: 20px">
                <div ng-show="SelectedIssue.Id">
                    <h6>{{SelectedIssue.Name}}</h6>

                    <div class="row">
                        <div class="col s12">
                            <table class="highlight" ng-show="Causes && Causes.length > 0">
                                <thead>
                                    <tr>
                                        <th class="width50">Causa</th>
                                        <th class="width50">Soluci&oacute;n</th>
                                    </tr>
                                </thead>

                                <tbody>
                                    <tr ng-repeat="cause in Causes">
                                        <td><b>{{cause.Description}}</b></td>

                                        <td>
                                            <ul>
                                                <li ng-repeat="solution in cause.Solutions">
                                                    <b>{{$index + 1}}) {{solution.Description}}</b>
                                                </li>
                                            </ul>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>

                            <div class="center" ng-show="!Causes || Causes.length <= 0">
                                <b>No hay causas registradas.</b>
                            </div>
                        </div>
                    </div>
                </div>

                <h6>Contactos</h6>

                <div class="contact-info row">
                    <div class="col s3" ng-repeat="contactSection in ContactSections">
                        <h5>{{contactSection.Title}}</h5>

                        <table>
                            <thead>
                                <tr>
                                    <th class="width75">Nombre</th>
                                    <th class="center width25">Marcaci&oacute;n</th>
                                </tr>
                            </thead>

                            <tbody>
                                <tr ng-repeat="contact in contactSection.Contacts">
                                    <td>{{contact.FullName}}</td>
                                    <td class="center">{{contact.SpeedDial}}</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </body>
</html>